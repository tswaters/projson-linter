{
  "name": "json-linter",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "stylelint \"src/styles/*.less\" && eslint src/js",
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "format": "prettier --write **/*.*",
    "start": "webpack-dev-server --mode=development",
    "test": "mocha"
  },
  "author": "Tyler Waters <tyler.waters@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.1",
    "css-minimizer-webpack-plugin": "^1.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^8.1.1",
    "offline-plugin": "^5.0.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^4.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {},
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 1%, not dead, not ie < 13"
        }
      ]
    ],
    "sourceMaps": true,
    "retainLines": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "mocha": {
    "spec": [
      "test/parser.js"
    ],
    "require": "@babel/register"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "env": {
          "node": true,
          "mocha": true
        }
      }
    ],
    "extends": [
      "eslint:recommended",
      "eslint-config-prettier"
    ],
    "rules": {
      "no-control-regex": "off",
      "no-misleading-character-class": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "inside-block"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ]
    }
  }
}
